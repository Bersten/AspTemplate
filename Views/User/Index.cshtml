@model IEnumerable<Exercice.Models.User>

<h1>Liste des Utilisateurs</h1>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Biographie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.UserProfile?.Biography</td>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.Id })">Voir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Search", "User")">Rechercher un utilisateur</a>